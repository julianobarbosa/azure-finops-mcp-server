# Azure FinOps MCP Server Configuration
# Copy this file to .env and fill in your values

# REQUIRED: Azure Subscription Configuration
# Single subscription ID
AZURE_SUBSCRIPTION_ID=your-subscription-id-here

# OR multiple subscription IDs (comma-separated)
# AZURE_SUBSCRIPTION_IDS=sub-id-1,sub-id-2,sub-id-3

# OPTIONAL: Resource Group Patterns
# Comma-separated list of resource group patterns to filter
# AZURE_RESOURCE_GROUP_PATTERNS=RG_Production,RG_Development

# OPTIONAL: Default Regions
# Comma-separated list of Azure regions to analyze
# AZURE_DEFAULT_REGIONS=eastus,westus,northeurope

# Performance Settings
# Maximum number of parallel workers for processing subscriptions
AZURE_MAX_WORKERS=5

# Request timeout in seconds
AZURE_REQUEST_TIMEOUT=30

# Cache settings
AZURE_CACHE_TTL=300  # Cache time-to-live in seconds
AZURE_ENABLE_CACHE=true

# Azure Management API Settings
# Default: https://management.azure.com
# For Azure Government: https://management.usgovcloudapi.net
# For Azure China: https://management.chinacloudapi.cn
AZURE_MANAGEMENT_URL=https://management.azure.com

# Retry Configuration
AZURE_MAX_RETRIES=3

# Logging Configuration
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
AZURE_LOG_LEVEL=INFO

# Enable detailed logging for debugging
AZURE_DETAILED_LOGGING=false
